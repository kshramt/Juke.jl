#!/usr/bin/env julia

import Juke: run, cd
finish, job = Juke.new_dsl()

function main(args)
    parsed_args = Juke.parse_args(args)
    dir = pwd()
    jukefile = parsed_args["file"]
    path = joinpath(dir, jukefile)
    if isfile(path)
        include(path)
        finish(parsed_args["targets"], parsed_args["print_dependencies"])
        return
    end
    Juke.error("$jukefile not found.")
end

main(ARGS)
