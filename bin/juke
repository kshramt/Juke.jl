#!/usr/bin/env julia

import Juke: sh
finish, job, rule = Juke.new_dsl()

function main(args)
    parsed_args = Juke.parse_args(args)
    dir = pwd()
    for f in Juke.JUKEFILE_NAMES
        path = joinpath(dir, f)
        if isfile(path)
            include(path)
            finish(Juke.parse_names(parsed_args["names"]))
            return
        end
    end
    Juke.error("None of following files were found: $(join(Juke.JUKEFILE_NAMES, ", "))")
end

main(ARGS)
