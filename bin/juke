#!/usr/bin/env julia

import Juke: sh
finish, job, rule = Juke.new_dsl()

function main(args)
    parsed_args = Juke.parse_args(args)
    dir = pwd()
    jukefiles = parsed_args["file"]
    for f in jukefiles
        path = joinpath(dir, f)
        if isfile(path)
            include(path)
            finish(parsed_args["name"])
            return
        end
    end
    Juke.error("None of following files were found: $(join(jukefiles, ", "))")
end

main(ARGS)
